<ul class="button-list">
    {% for button in buttons %}
        <li class="button-item">
            {{ include (
                '@component/button/button.twig',
                {
                    text: button.entity.field_link.title,
                    link: button.entity.field_link.uri,
                    type: button.entity.field_link_color.value|lower
                },
                with_context = false
            ) }}
        </li>
    {% endfor %}
</ul>
